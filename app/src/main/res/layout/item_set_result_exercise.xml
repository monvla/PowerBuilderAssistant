<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small">

    <TextView
        android:id="@+id/setExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setExerciseRepeatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Повторы: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setExerciseName" />

    <TextView
        android:id="@+id/setExerciseRepeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintStart_toEndOf="@id/setExerciseRepeatsLabel"
        app:layout_constraintTop_toBottomOf="@id/setExerciseName" />

    <TextView
        android:id="@+id/setExerciseWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес снаряда: "
        app:layout_constraintEnd_toStartOf="@+id/setExerciseWeight"
        app:layout_constraintTop_toBottomOf="@id/setExerciseName" />

    <TextView
        android:id="@+id/setExerciseWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24"
        app:layout_constraintEnd_toStartOf="@id/setExerciseWeightUnitLabel"
        app:layout_constraintTop_toBottomOf="@id/setExerciseName" />

    <TextView
        android:id="@+id/setExerciseWeightUnitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setExerciseName" />
</androidx.constraintlayout.widget.ConstraintLayout>