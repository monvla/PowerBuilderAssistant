<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="calendar_date_background">#FFFFFF</color>
    <color name="calendar_date_disabled_background">#FFFFFF</color>
    <color name="calendar_date_disabled_text_color">#b3b3b3</color>
    <color name="calendar_date_pressed_background">#f5f5f5</color>
    <color name="calendar_date_pressed_text_color">#AD000000</color>
    <color name="calendar_date_selected_background">#55B3F3</color>
    <color name="calendar_date_selected_text_color">#FFFFFF</color>
    <color name="calendar_date_text_color">#AD000000</color>
    <color name="calendar_date_today_background">#FFFFFF</color>
    <color name="calendar_date_today_text_color">#1e88e5</color>
    <color name="calendar_date_weekend_background">#05000000</color>
    <color name="calendar_date_weekend_text_color">#AD000000</color>
    <color name="calendar_days_bar_background">#FFFFFF</color>
    <color name="calendar_days_bar_text_color">#AD000000</color>
    <color name="calendar_grid_color">#E9E9E9</color>
    <color name="calendar_month_text_color">#000000</color>
    <color name="calendar_year_selection_arrows_color">#55B3F3</color>
    <color name="calendar_year_selection_background">#FFFFFF</color>
    <color name="calendar_year_selection_text_color">#000000</color>
    <dimen name="calendar_margin_medium">16dp</dimen>
    <dimen name="calendar_margin_small">8dp</dimen>
    <dimen name="calendar_month_text_size">21sp</dimen>
    <dimen name="calendar_month_view_height">70dp</dimen>
    <dimen name="calendar_week_days_bar_height">24dp</dimen>
    <integer name="calendar_arrow_icon_angle">0</integer>
    <integer name="calendar_year_anim_duration">300</integer>
    <style name="CalendarClickableView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="CalendarClickableView.YearSelectionArrow">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/calendar_margin_small</item>
        <item name="android:rotationY">@integer/calendar_arrow_icon_angle</item>
        <item name="android:tint">@color/calendar_date_today_text_color</item>
    </style>
    <style name="CalendarWeekDay">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CalendarWeekDaysBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/calendar_week_days_bar_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="CalendarYearSelectionText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/calendar_year_selection_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <declare-styleable name="CalendarDateStates">
        <attr format="boolean" name="calendar_state_today"/>

        <attr format="boolean" name="calendar_state_selected"/>
        <attr format="boolean" name="calendar_state_selected_single"/>
        <attr format="boolean" name="calendar_state_selected_start"/>
        <attr format="boolean" name="calendar_state_selected_end"/>

        <attr format="boolean" name="calendar_state_disabled"/>
        <attr format="boolean" name="calendar_state_weekend"/>
    </declare-styleable>
    <declare-styleable name="CalendarView">
        <attr format="boolean" name="calendar_grid_on_selected_dates"/>
        <attr format="color" name="calendar_grid_color"/>
        <attr format="color" name="calendar_day_bar_background"/>
        <attr format="color" name="calendar_day_bar_text_color"/>
        <attr format="color" name="calendar_day_bar_weekend_text_color"/>
        <attr format="color" name="calendar_year_selection_background"/>
        <attr format="color" name="calendar_year_selection_arrows_color"/>
        <attr format="color" name="calendar_year_selection_text_color"/>
        <attr format="color" name="calendar_month_text_color"/>
        <attr format="dimension" name="calendar_month_text_size"/>
        <attr name="calendar_month_text_style">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr format="reference" name="calendar_date_background"/>
        <attr format="reference" name="calendar_date_background_tint"/>
        <attr format="reference" name="calendar_date_text_color"/>
    </declare-styleable>
    <declare-styleable name="CalendarViewTheme">
        <attr format="reference" name="calendarViewStyle"/>
    </declare-styleable>
</resources>